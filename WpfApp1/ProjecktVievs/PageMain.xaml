<Page x:Class="RestoranKuesa.ProjecktVievs.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoranKuesa.ProjecktVievs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="0"  FontSize="30" Background="#000" Foreground="#fff" TextChanged="UsernameTextBox_TextChanged" VerticalAlignment="Center" Height="42" Margin="10,0,10,0"/>
        <Button Grid.Column="0" Margin="10,10,10,10" FontSize="36" Background="#000" Foreground="#fff" Click="Button_Click" Grid.Row="2" VerticalAlignment="Top">Войти</Button>
        <TextBlock HorizontalAlignment="Center" Margin="0,74,0,0" FontSize="39" TextWrapping="Wrap" Foreground="#fff" Text="Введите Ключь" VerticalAlignment="Top" Width="280" Height="55"/>
    </Grid>
</Page>

<Page x:Class="WpfApp1.ProjecktVievs.Vievs.WindowMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.ProjecktVievs.Vievs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WindowMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBoxCategory" Grid.Row="0" Padding="10" Margin="10,5,10,0" FontSize="20" Background="#111" Foreground="#fff" TextWrapping="Wrap" Text="Салаты" VerticalAlignment="Top"/>
        <DataGrid x:Name="DataGrid1" FontSize="20" Background="#000" Foreground="#000" AutoGenerateColumns="True" SelectionChanged="DataGrid1_SelectionChanged" Margin="10" Grid.Row="2"/>
        <Button Content="Вывести"  FontSize="20" Background="#000" Foreground="#fff" Click="Button_Click"  Grid.Row="1" VerticalAlignment="Center" Padding="10" Margin="10,0,10,0"/>
    </Grid>
</Page>
